{
  "name": "neetdiv_form",
  "version": "1.0.0",
  "description": "League of Legends summoner information management system for Google Apps Script",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "rimraf dist && esbuild src/main.ts --bundle --outfile=dist/Code.gs --format=esm && cpx src/ui/**/*.html dist && cpx appsscript.json dist",
    "build:watch": "npm run build -- --watch",
    "build:dev": "npm run build -- --sourcemap",
    "format": "prettier -w **/*.{json,md,yml,html} && biome check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc"
  },
  "author": "Community",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/google-apps-script": "^1.0.100",
    "cpx2": "^4.2.3",
    "esbuild": "^0.25.8",
    "lefthook": "^1.12.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
