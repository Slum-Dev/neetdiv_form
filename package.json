{
  "name": "neetdiv_form",
  "version": "1.0.0",
  "description": "League of Legends summoner information management system for Google Apps Script",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.js --bundle --outfile=dist/Code.gs --format=iife --platform=browser --target=es2015 --global-name=GASApp",
    "build:watch": "npm run build -- --watch",
    "build:dev": "npm run build -- --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "google-apps-script",
    "riot-api",
    "league-of-legends",
    "spreadsheet"
  ],
  "author": "Community",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.8",
    "vitest": "^3.2.4"
  }
}
